# ============================================
# REQUIRED - Core Configuration
# ============================================

# Database Connection
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/azaire_dev"

# BetterAuth Configuration
# Generate a secure random string: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
BETTER_AUTH_URL="http://localhost:3000"

# Application URL (used for email links and redirects)
# In production, set to your actual domain: https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# OPTIONAL - Platform Settings (Fallbacks)
# ============================================
# These are used as fallbacks when creating initial platform settings in the database
# Once platform settings are created, they're managed through the Super Admin UI

PLATFORM_NAME="Azaire Fleet Manager"
DEFAULT_TIMEZONE="Africa/Harare"
DEFAULT_CURRENCY="USD"
WEBHOOK_URL=""

# ============================================
# OPTIONAL - Email Configuration
# ============================================
# Choose ONE email provider: SMTP or Resend

# Option 1: SMTP (Gmail, SendGrid, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="Azaire Fleet Manager"

# Option 2: Resend (Recommended for production)
RESEND_API_KEY="re_xxxxxxxxxx"

# ============================================
# OPTIONAL - Payment Gateway (PayNow)
# ============================================
PAYNOW_INTEGRATION_ID=""
PAYNOW_INTEGRATION_KEY=""
PAYNOW_RESULT_URL="https://your-domain.com/api/payments/paynow/callback"
PAYNOW_RETURN_URL="https://your-domain.com/payments/result"

# ============================================
# OPTIONAL - SMS Service (Africa's Talking)
# ============================================
AFRICAS_TALKING_API_KEY=""
AFRICAS_TALKING_USERNAME=""

# ============================================
# OPTIONAL - Analytics
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ============================================
# OPTIONAL - Cloud Storage (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# ============================================
# OPTIONAL - Background Jobs (Redis)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# OPTIONAL - Environment
# ============================================
NODE_ENV="development"
